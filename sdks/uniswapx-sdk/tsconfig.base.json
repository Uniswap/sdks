{
  "include": [
    "src",
    "abis"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2024",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
